@{
    Layout=null;
}

<!DOCTYPE html>
<html>
@Html.Partial("_head")
<body class="landing-page sidebar-collapse">
    @Html.Partial("_nav")

    <div class="page-header header-filter" data-parallax="true" style="background-image: url('../assets/img/passion-led-us-here.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="title">I'm Johan</h1>
                    <h4>Doing what I like, and liking what I do</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="main main-raised">
        <div class="section section-basic">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <div class="title mb-5">
                            <h1>Latest posts</h1>
                        </div>

                        @foreach(IDocument post in Model.DocumentList(Keys.PageDocuments))
                        {
                            var published =post.DateTime(BlogKeys.Published);

                            <div class="card mb-5">
                                <div class="card-header card-header-primary">
                                    @post.WithoutSettings.String(BlogKeys.Title)
                                </div>
                                <div class="card-body">
                                        @Html.Raw(post.String(BlogKeys.Excerpt))
                                    <a href="@Context.GetLink(post)">Keep reading</a>  
                                </div>
                                <div class="card-footer">
                                <span class="mr-3"><i class="fa fa-user"></i> @post.String("Author")</span>
                                <span><i class="fa fa-calendar"></i> <time datetime="@published.ToString("YYYY-MM-DD")">@(published.ToLongDateString(Context))</time></span>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="col-md-4">
                        
                        <h1>Tags</h1>

                        <div>
                            @foreach (IDocument tagDocument in Documents[Blog.Tags]
                                .GroupBy(x => x.String(BlogKeys.Tag)).Select(x => x.Where(p => p.Get<int>(Keys.CurrentPage) == 1).First())
                                .OrderByDescending(x => x.Get<int>(Keys.TotalItems)))
                            { 
                                string tagName = tagDocument.String(BlogKeys.Tag);
                                string postCount = tagDocument.String(Keys.TotalItems);
                                var firstTagDoc = tagDocument.DocumentList(Keys.PageDocuments).FirstOrDefault();

                                <a href="@Context.GetLink(tagDocument)" class="badge badge-pill badge-lg badge-primary">
                                    @tagName (@postCount)
                                </a>
                            }
                        </div>
                    </div>
                </div>

                @if(Model.Bool(Keys.HasPreviousPage)) {
                    <a href="@(Context.GetLink(Model.Document(Keys.PreviousPage)))"><span aria-hidden="true">&larr;</span> Newer</a> 
                } 

                @if(Model.Bool(Keys.HasNextPage)) {
                    <a href="@(Context.GetLink(Model.Document(Keys.NextPage)))">Older <span aria-hidden="true">&rarr;</span></a> 
                }

                @if(Context.Bool(BlogKeys.GenerateArchive))
                {
                    <a href="@Context.GetLink(Context.String(BlogKeys.PostsPath))">Archive &rarr;</a>
                }
            </div>
        </div>
    </div>
    @Html.Partial("_footer")
    @Html.Partial("_scripts")
</body>
</html>

